fastlane_version "2.53.1"

before_all do
# ENV["SLACK_URL"] = "https://hooks.slack.com/services/..."
end

desc "Runs all the tests"

lane :resign_all do

  Dir["../*-patched.ipa"].each { |ipa|
    resign(ipa: File.basename(ipa), signing_identity: "iPhone Developer: Rocky rocky (L2B3D78P66)", provisioning_profile: {
      "*" => "./Com_Wildcard_DEV.mobileprovision"
    })
  }

end


# You can define as many lanes as you want

after_all do |lane|
# This block is called, only if the executed lane was successful

